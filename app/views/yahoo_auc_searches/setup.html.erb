<div class="container">
  <div class="page-header" id="banner">
    <div class="row my-4">
      <div class="col-lg-10 col-md-10">
        <h2>ヤフオク検索条件の設定</h2>
        <%= form_for(@yahoo_auc_search, {url: yahoo_auc_searches_setup_path, method: 'post'}) do |f| %>
          <div class="actions">
            <%= submit_tag '検索条件設定', class: 'btn btn-info', style: 'margin-top:10px;' %>
          </div><br>
          <table class="table table-striped table-hover table-bordered" style='width:400px; table-layout:fixed;'>
            <thead class="thead-light">
              <tr>
                <th style='width:40%;'>項目名</th>
                <th style='width:60%;'>設定値</th>
              </tr>
            </thead>
            <tbody>
              <% @headers.each do |key, value| %>
              <tr>
                <td class="td_vertical_align_middle"><%= value.to_s %></td>
                <td class="td_vertical_align_middle"><%= f.text_field key, class: 'form-control' %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
